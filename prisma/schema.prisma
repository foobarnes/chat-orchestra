generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model UserApiKey {
  id     BigInt @id @default(autoincrement())
  userId String
  apiKey String

  // Add unique index for userId
  @@unique([userId])
  
  // Add unique index for apiKey
  @@unique([apiKey])
}
